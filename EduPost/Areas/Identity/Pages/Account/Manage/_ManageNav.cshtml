@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="list-group list-group-flush account-settings-links">
    <a class="list-group-item list-group-item-action nav-link @ManageNavPages.IndexNavClass(ViewContext)" data-toggle="list" id="profile" asp-page="./Index">Manage Profile</a>

    <a class="list-group-item list-group-item-action nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" data-toggle="list" id="change-password" asp-page="./ChangePassword">Change Password</a>
</div>
