@page
@model FirstLoginModel
@{
    ViewData["Title"] = "FirstLogin";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <title>Edu Post Login</title>
</head>

<!----------------------- Main Container -------------------------->
<div class="d-flex justify-content-center align-items-center login-container">

    <!----------------------- Login Container -------------------------->
    <div class="row border rounded-5 p-3 bg-white shadow box-area">

        <!-------------------- ------ Right Box ---------------------------->
        <div class="col-12">

            <section class="row align-items-center">
                <div class="featured-image mb-3">
                    <img src="~/images/2022-Greenwich-Eng.png" class="img-fluid" style="width:250px" />
                </div>

                <div class="header-text mb-4">
                    <h2>Welcome to Edu Post</h2>
                    <p>This is your first login!</p>
                    <span>Please change your password and username for sercurity reason.</span>
                </div>

                <hr />

                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="input-group mb-3">
                        <i class="bi bi-person custom-icon"></i>
                        <input asp-for="Input.UserName" class="form-control form-control-lg bg-light fs-6" autocomplete="username"
                               aria-required="true" placeholder="Please enter your new username." />
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <i class="bi bi-shield-lock custom-icon"></i>
                        <input asp-for="Input.OldPassword" class="form-control form-control-lg bg-light fs-6" autocomplete="current-password"
                               aria-required="true" placeholder="Please enter your old password." />
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <i class="bi bi-key-fill custom-icon"></i>
                        <input asp-for="Input.NewPassword" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password"
                               aria-required="true" placeholder="Please enter your new password." />
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <i class="bi bi-key-fill custom-icon"></i>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password"
                               aria-required="true" placeholder="Please confirm your new password." />
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Update password</button>
                    </div>
                </form>

            </section>
            <!-- <footer style="text-align: center;">
                <p>COMP1640 - Enterprise Web Development</p>
                <p> UoG 2024</p>
            </footer> -->
        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
