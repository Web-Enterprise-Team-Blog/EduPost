@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<link rel="stylesheet" href="style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container light-style flex-grow-1 container-p-y">
	<h4 class="font-weight-bold py-3 mb-4">Account settings</h4>

    <div class="text-right mt-3">
        @if (User.IsInRole("Admin"))
        {
            <a href="/Users/Index" class="btn btn-default">Exit Profile</a>
        }
        else if (User.IsInRole("Manager"))
        {
            <a href="/Manager/Index" class="btn btn-default">Exit Profile</a>
        }
        else if (User.IsInRole("Coordinator"))
        {
            <a href="/Coordinator/Index" class="btn btn-default">Exit Profile</a>
        }
        else if (User.IsInRole("Student"))
        {
            <a href="/Home/Index" class="btn btn-default">Exit Profile</a>
        }
        else if (User.IsInRole("Guest"))
        {
            <a href="/Guest/Index" class="btn btn-default">Exit Profile</a>
        }
    </div>

    <div class="card overflow-hidden">
        <div class="row no-gutters row-bordered row-border-light">

            <div class="col-md-3 pt-0">
				<partial name="_ManageNav" />
            </div>

            <div class="col-md-9">
                <div class="tab-content">
                    <div class="card-body">
				        @RenderBody()
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
