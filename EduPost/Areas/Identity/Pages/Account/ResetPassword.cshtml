@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <title>Edu Post Login</title>
</head>
<body>
    <!----------------------- Main Container -------------------------->
    <div class="d-flex justify-content-center align-items-center login-container">

        <!----------------------- Login Container -------------------------->
        <div class="row border rounded-5 p-3 bg-white shadow box-area">

            <!-------------------- ------ Right Box ---------------------------->
            <div class="col-12">

                <section class="row align-items-center">
                    <div class="featured-image mb-3">
                        <img src="~/images/2022-Greenwich-Eng.png" class="img-fluid" style="width:250px" />
                    </div>

                    <div class="header-text mb-4">
                        <h2>Reset Your Password</h2>
                    </div>

                    <hr />

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />

                        <div class="input-group mb-3">
                            <i class="bi bi-person custom-icon"></i>
                            <input asp-for="Input.Email" class="form-control form-control-lg bg-light fs-6" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <div class="invalid-feedback d-block">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <i class="bi bi-key custom-icon"></i>
                            <input asp-for="Input.Password" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." onkeyup="checkCaplock" />
                            <button id="btnPassword-1" class="btn btn-outline-secondary" type="button"><span class="bi bi-eye-fill"></span></button>
                            <div class="invalid-feedback d-block">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <p id="warning-1" class="text-danger" style="margin-left:35px;display:none">caplock is on</p>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <i class="bi bi-key custom-icon"></i>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." onkeyup="checkCaplock" />
                            <button id="btnPassword-2" class="btn btn-outline-secondary" type="button"><span class="bi bi-eye-fill"></span></button>
                            <div class="invalid-feedback d-block">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                <p id="warning-2" class="text-danger" style="margin-left:35px;display:none">caplock is on</p>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Reset</button>
                    </form>

                </section>

            </div>

        </div>

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        //caplock on check
        const input1 = document.getElementById("Input_Password");
        const warning1 = document.getElementById("warning-1");

        input1.addEventListener("keyup", function(event) {
            if (event.getModifierState("CapsLock")) {
	            warning1.style.display = "block";
            } else {
	            warning1.style.display = "none";
            }
        });
        //hide show password
        const btnElement1 = document.getElementById("btnPassword-1")

        btnElement1.addEventListener("click", function () {
            input1.setAttribute("type", input1.getAttribute("type") === "password" ? "text" : "password")
        })

        //caplock on check
        const input2 = document.getElementById("Input_ConfirmPassword");
        const warning2 = document.getElementById("warning-2");

        input2.addEventListener("keyup", function(event) {
            if (event.getModifierState("CapsLock")) {
	            warning2.style.display = "block";
            } else {
	            warning2.style.display = "none";
            }
        });
        //hide show password
        const btnElement2 = document.getElementById("btnPassword-2")

        btnElement2.addEventListener("click", function () {
            input2.setAttribute("type", input2.getAttribute("type") === "password" ? "text" : "password")
        })
    </script>
    
}
</body>
</html>