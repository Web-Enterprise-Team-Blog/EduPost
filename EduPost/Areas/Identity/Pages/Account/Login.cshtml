@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <title>Edu Post Login</title>
</head>

<!----------------------- Main Container -------------------------->
<div class="d-flex justify-content-center align-items-center login-container">

    <!----------------------- Login Container -------------------------->
    <div class="row border rounded-5 p-3 bg-white shadow box-area">

        <!-------------------- ------ Right Box ---------------------------->
        <div class="col-12">

            <section class="row align-items-center">
                <div class="featured-image mb-3">
                    <img src="~/images/2022-greenwich-eng.jpg" class="img-fluid" style="width:250px" />
                </div>

				<div class="header-text mb-4">
					<h2>Welcome back to Edu Post</h2>
					<p>We are happy to have you back.</p>
				</div>

				<hr />

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> 

                    <div class="input-group mb-3">
                        <i class="bi bi-person custom-icon"></i>
                        <input asp-for="Input.Email" class="form-control form-control-lg bg-light fs-6" autocomplete="email"
                        aria-required="true" placeholder="name@example.com" />
                        @* <label asp-for="Input.Email" class="form-label">Email</label> *@
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.Email" class=" text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-1">
                        <i class="bi bi-key custom-icon"></i>
                        <input asp-for="Input.Password" class="form-control form-control-lg bg-light fs-6" autocomplete="current-password"
                        aria-required="true" placeholder="password" />
                        @* <label asp-for="Input.Password" class="form-label">Password</label> *@
                        <div class="invalid-feedback d-block">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-5 d-flex justify-content-between">
						<div class="checkbox mb-3">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
                        <div class="forgot">
                            <small><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></small>
						</div>
					</div>

                    <div class="input-group mb-3">
                        <button id="login-submit" type="submit" class="btn btn-lg btn-primary w-100 fs-6">Log in</button>
                    </div>

                    <!-- <div class="input-group mb-3">
                        <button class="btn btn-lg btn-light w-100 fs-6"><img src="images/google.png" style="width:20px"
                                class="me-2"><small>Sign In with Google</small></button>
                    </div> -->
                </form>
            </section>
            <!-- <footer style="text-align: center;">
                <p>COMP1640 - Enterprise Web Development</p>
                <p> UoG 2024</p>
            </footer> --> 
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
