@model EduPost.Controllers.HomeIndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="~/mundana/assets/img/favicon.ico">
	<link rel="icon" type="image/png" href="~/mundana/assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>Edu Post - Home Page</title>
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Source+Sans+Pro:400,600,700" rel="stylesheet">
	<!-- Font Awesome Icons -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
	<!-- Main CSS -->
	<link href="~/mundana/assets/css/main.css" rel="stylesheet" />
</head>
<body style="margin: 0; padding: 0;">
	<!--------------------------------------
	NAVBAR
	--------------------------------------->
	<!-- End Navbar -->
	<!--------------------------------------
	HEADER
	--------------------------------------->
	<div class="container" stye=margin-top:50px>
		<div class="jumbotron jumbotron-fluid mb-3 pt-0 pb-0 bg-lightblue position-relative">
			<div class="pl-4 pr-0 h-100 tofront">
				<div class="row justify-content-between">
					<div class="col-md-6 pt-6 pb-6 align-self-center">
						<h1 class="secondfont mb-3 font-weight-bold">Welcome,@User.Identity.Name</h1>
						<p class="mb-3">
							The lastest and and popular articles in EduPost is here!
						</p>
						@* <a href="~/mundana/article.html" class="btn btn-dark">Read More</a> *@
					</div>
					<div class="col-md-6 d-none d-md-block pr-0" style="background-size:cover;background-image:url(~/mundana/assets/img/demo/home.jpg);">	</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Header -->
	<!--------------------------------------
	MAIN
	--------------------------------------->

	<div class="container mt-4 mb-4">
		<div class="row">

			<div class="col-lg-6">
				<h5 class="font-weight-bold spanborder"><span>Lastest Articles</span></h5>
				<div class="flex-md-row mb-4 box-shadow h-xl-300">
					@for (int i = 0; i <= Model.f1.Count() - 1; i++)
					{
						<div class="mb-3 d-flex align-items-center">
							<img height="80" src="~/mundana/assets/img/demo/blog4.jpg">

							<div class="pl-3 text-truncate">
								<h2 class="mb-2 h6 font-weight-bold">
									<a class="text-dark" asp-action="Details" asp-route-id="@Model.f1[i].ArticleId">@Model.f1[i].ArticleTitle</a>
								</h2>
								<p class="card-text small m-0 text-truncate">
									@Model.f1[i].Description
								</p>
								<div class="card-text text-muted small">
									By @Model.f1[i].User.UserName
								</div>
								<small class="text-muted">@Model.f1[i].CreatedDate.Value.Day/@Model.f1[i].CreatedDate.Value.Month/@Model.f1[i].CreatedDate.Value.Year</small>
							</div>
						</div>
					}
				</div>
			</div>

			<div class="col-lg-6">
				<h5 class="font-weight-bold spanborder"><span>Most Liked Articles</span></h5>
				<div class="flex-md-row mb-4 box-shadow h-xl-300">
					@for (int i = 0; i <= Model.f2.Count() - 1; i++)
					{
						<div class="mb-3 d-flex align-items-center">
							<img height="80" src="~/mundana/assets/img/demo/blog4.jpg">

							<div class="pl-3 text-truncate">
								<h2 class="mb-2 h6 font-weight-bold">
									<a class="text-dark" asp-action="Details" asp-route-id="@Model.f2[i].ArticleId">@Model.f2[i].ArticleTitle</a>
								</h2>
								<p class="card-text small m-0 text-truncate">
									@Model.f2[i].Description
								</p>
								<div class="card-text text-muted small">
									By @Model.f2[i].User.UserName
								</div>
								<small class="text-muted">@Model.f2[i].CreatedDate.Value.Day/@Model.f2[i].CreatedDate.Value.Month/@Model.f2[i].CreatedDate.Value.Year</small>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>


			
	<div class="container">
		<div>

			<h5 class="font-weight-bold spanborder"><span>Articles with the most comments</span></h5>

			@for (int i = 0; i <= @Model.f3.Count() - 1; i++)
			{
				<div class="mb-3 d-flex flex-row">
					<img height="120" src="~/mundana/assets/img/demo/5.jpg">

					<div class="ml-5  text-truncate">
						<h2 class="mb-1 h4 font-weight-bold">
							<a class="text-dark" asp-action="Details" asp-route-id="@Model.f3[i].ArticleId">@Model.f3[i].ArticleTitle</a>
						</h2>
						<p class="card-text small m-0 text-truncate">
							@Model.f3[i].Description
						</p>
						<div class="card-text text-muted small">
							@Model.f3[i].User.UserName
						</div>
						<small class="text-muted">@Model.f3[i].CreatedDate.Value.Day/@Model.f3[i].CreatedDate.Value.Month/@Model.f3[i].CreatedDate.Value.Year</small>
					</div>
				</div>
			}

		</div>
	</div>

	<!--------------------------------------
	FOOTER
	--------------------------------------->
	<!-- End Footer -->
	<!--------------------------------------
	JAVASCRIPTS
	--------------------------------------->
	<script src="~/mundana/assets/js/vendor/jquery.min.js" type="text/javascript"></script>
	<script src="~/mundana/assets/js/vendor/popper.min.js" type="text/javascript"></script>
	<script src="~/mundana/assets/js/vendor/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/mundana/assets/js/functions.js" type="text/javascript"></script>
</body>
</html>
